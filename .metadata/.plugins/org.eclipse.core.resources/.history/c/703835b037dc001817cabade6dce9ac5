package application;

import java.util.Locale;
import java.util.Scanner;

public class Program {

	public static void main(String[] args) {

		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);

		int n = sc.nextInt();

		String[] nome = new String[n];
		double[] compra = new double[n];
		double[] venda = new double[n];

		for (int i = 0; i < n; i++) {			
			nome[i] = sc.next();
			compra[i] = sc.nextDouble();
			venda[i] = sc.nextDouble();
		}

		int count=0;
		for (int i = 0; i < n; i++) {
			double lucro=(venda[i]-compra[i])/100.0;
			
			if (lucro<0.1) {
				count +=1;
				System.out.println("Lucro abaixo de 10%: "+count);				
			}
			else if(lucro>0.2){
				count +=1;
				System.out.println("Lucro abaixo de 20%: "+count);
			}
			else {
				count +=1;
				System.out.println("Lucro acima de 20%: "+count);
			}
		}
	
		double totalCompra=0;
		double totalVenda=0;
		double totalLucro=0;
		for (int i = 0; i < n; i++) {	
			totalCompra +=compra[i];
			totalVenda +=venda[i];
			totalLucro=totalVenda-totalCompra;
		}
		
		System.out.printf("Valor total de compra: %.2f%n",totalCompra);
		System.out.printf("Valor total de venda: %.2f%n",totalVenda);
		System.out.printf("Lucro total: %.2f%n",totalLucro);

		sc.close();
	}

}
