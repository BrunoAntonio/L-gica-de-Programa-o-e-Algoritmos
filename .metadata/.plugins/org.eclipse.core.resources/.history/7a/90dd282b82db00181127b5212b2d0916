package application;

import java.util.Locale;
import java.util.Scanner;

public class Program {

	public static void main(String[] args) {

		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);

		int n = sc.nextInt();

		int fact=0;
		for (int i = 1; i <= n; i++) {
			fact +=n-i;

		}

		sc.close();

	}

}
